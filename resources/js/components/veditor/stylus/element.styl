.drag-over
  outline: #F06292 solid 1px;
  position:relative;
  background-color: #FCE4EC;
  
.mouse-over
  outline: #1E88E5 solid 1px;
  position:relative;

.focus-it
  outline: #1E88E5 solid 3px;
  position:relative;

.dragged
  position:relative;
  border:0;
  outline:0;

.dragged::after
  content:'';
  position:absolute;
  width:100%;
  height:100%;
  top:0;
  left:0;
  -moz-opacity:0.7;
  opacity: 0.7;
  background-color:#fff;
  outline:#DDD dashed 2px;

.placeholder  
  position:relative;
  border:0;
  outline:0;

.placeholder::after
  content:'';
  position:absolute;
  width:100%;
  height:100%;
  top:0;
  left:0;
  background:repeating-linear-gradient(135deg,#DADADA,#F5F5F5 5px);

